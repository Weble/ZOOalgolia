<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade" version="3.0">
    <name>ZOO - Algolia Integration</name>
    <version>2.1.1</version>
    <creationDate>October 2021</creationDate>
    <copyright>(C) 2021 - 2024 Weble Srl</copyright>
    <license>GNU GPLv2 or later</license>
    <author>Weble Srl</author>
    <authorEmail>daniele@weble.it</authorEmail>
    <authorUrl>https://weble.it</authorUrl>
    <description>Algolia Integration for ZOO</description>
    <element>zooalgolia</element>
    <scriptfile>install.php</scriptfile>
    <files>
        <filename plugin="zooalgolia">zooalgolia.php</filename>
        <folder>renderer</folder>
        <folder>vendor</folder>
        <folder>config</folder>
        <folder>helpers</folder>
        <folder>src</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="prepend_language"
                       type="list"
                       default="0"
                       label="Prepend Language"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
